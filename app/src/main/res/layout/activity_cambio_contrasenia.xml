<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cambiar_contrasenia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambioContrasenia">

    <Button
        android:id="@+id/btn_enviarCorreo"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:onClick="validarCorreo"
        android:text="ENVIAR CORREO"
        app:layout_constraintEnd_toEndOf="@+id/inputCorreo_cambioPsw"
        app:layout_constraintStart_toStartOf="@+id/inputCorreo_cambioPsw"
        app:layout_constraintTop_toBottomOf="@+id/inputCorreo_cambioPsw" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCorreo_cambioPsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Correo"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="326dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="Ingrese el correo con el cual se ha registrado para proceder con el cambio de su contraseña"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="Cambio de contraseña"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>